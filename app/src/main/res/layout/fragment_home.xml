                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/white"
                    app:cardBackgroundColor="#E4E3E3"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp">

